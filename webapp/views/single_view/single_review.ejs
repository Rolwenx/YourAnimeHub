<% if (score >= 0 && score <= 35) { %>
  <div class="review-rate">
    <div class="review-rate" style="background-color: #FF5733;"> <!-- Example score: 20 -->
      <p class="rate-btn"><%= score %>/100</p>
  </div>
<% } %>

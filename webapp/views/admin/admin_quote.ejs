
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Manage Quotes - YourAnimeHub</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link type="text/css" rel="stylesheet" href="/css/styleAdminDash.css">
    
  </head>
  <body>


<!-- =============== Navigation ================ -->
<div class="container_wb">
    <%- include('../partials_admin/admin_navigation.ejs') %>

  <!-- ========================= Main ==================== -->
  <div class="main_wb">
      <div class="topbar">
          <div class="toggle">
              <ion-icon name="menu-outline"></ion-icon>
          </div>

          <div class="search">
              <label>
                  <input type="text" placeholder="Search here">
                  <ion-icon name="search-outline"></ion-icon>
              </label>
          </div>

          <a href="/user" class="user">
            <img class="profile-picture" src="<%= user.ProfilePictureURL %>" alt="Profile Picture">
        </a>
      </div>

      

      <div class="add_edit_container">
        <h3 class="edit_btn">To Edit Quote, click on it</h3>
    </div>

      <!-- ================ Quote List ================= -->

        <div class="cardHeader">
          <h2 class="quote_h2">All Quotes</h2>
        </div>
        <div class="quoteCard">
          <% if (quoteList && Array.isArray(quoteList) && quoteList.length > 0) { %>
            <% quoteList.forEach(quote => { %>
              <div class="card">
                <a href="/admin/quotes/edit/<%= quote.QuoteID %>" class="edit-btn">
                    <blockquote class="quote_block"><%= quote.QuoteText %>
                        <div class="quoteDetails">
                            <span class="animeTitle"><b>Anime:</b> <%= quote.AnimeName %> |</span>
                            <span class="characterName"><b>Character:</b> <%= quote.CharacterName %></span>
                        </div>
                        <form action="/admin/quotes/delete/<%= quote.QuoteID %>" method="post">
                          <button class="delete-btn" type="submit" onclick="return confirm('Are you sure you want to delete this quote?')"><ion-icon name="close-outline"></ion-icon></button>
                        </form>
                    </blockquote>
                </a>
                
            </div>
            <% }); %>
          <% } else { %>
            <p class="nothing_here">No quotes available in the database.</p>
          <% } %>
        </div>
              
              
      <div class="load-more-container">
        <button id="load-more-button" class="load-more-button">Load More</button>
      </div>
    
      <div class="add_edit_container">
        <a href="/admin/quotes/add" class="add_btn">Add Quote</a>
      </div>




  
  </div>
</div>

<%- include('../partials_admin/load_more_quotes.ejs') %>
<%- include('../partials_admin/admin_toggle.ejs') %>





<!-- ====== ionicons ======= -->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>



</body>
</html>

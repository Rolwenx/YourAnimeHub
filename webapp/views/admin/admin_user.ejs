
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Manage Users - YourAnimeHub</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link type="text/css" rel="stylesheet" href="/css/styleAdminDash.css">
  </head>
  <body>


<!-- =============== Navigation ================ -->
<div class="container_wb">
  <%- include('../partials_admin/admin_navigation.ejs') %>

  <!-- ========================= Main ==================== -->
  <div class="main_wb">
      <div class="topbar">
          <div class="toggle">
              <ion-icon name="menu-outline"></ion-icon>
          </div>

          <div class="search">
              <label>
                  <input type="text" placeholder="Search here">
                  <ion-icon name="search-outline"></ion-icon>
              </label>
          </div>

          <a href="/user" class="user">
            <img class="profile-picture" src="<%= user.ProfilePictureURL %>" alt="Profile Picture">
        </a>
      </div>

      

      <div class="add_edit_container">
        <h3 class="edit_btn">To Edit User, click on its Name</h3>
    </div>

      <!-- ================ Anime Details List ================= -->
      <div class="details">
          <div class="recentAnime">
              <div class="cardHeader">
                  <h2>All Users</h2>
              
              </div>
  
          
              <div class="animeCard">
                <% if (userList && Array.isArray(userList) && userList.length > 0) { %>
                  <% userList.forEach(users => { %>
                    <div class="card">
                      <div class="image-container">
                        <img src="<%= users.ProfilePictureURL %>" alt="<%= users.Username %>">
                      </div>
                      <div class="title-container">
                        <a href="/admin/users/edit/<%= users.UserID %>/<%= users.Username %>">
                          <%= users.Username %>
                        </a>
                        <form action="/admin/users/delete/<%= users.UserID %>/<%= users.Username %>" method="post">
                          <button class="delete-btn" type="submit" onclick="return confirm('Are you sure you want to delete this user?')"><ion-icon name="close-outline"></ion-icon></button>
                        </form>
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <p>No users registered in the database.</p>
                <% } %>
              </div>
              
            
            
            
            <div class="load-more-container">
              <button id="load-more-button" class="load-more-button">Load More</button>
            </div>


          <div class="add_edit_container">
              <a href="/admin/users/add" class="add_btn">Add User</a>
          </div>

        </div>

  
      </div>
  </div>
</div>

<%- include('../partials_admin/load_more_cards.ejs') %>
<%- include('../partials_admin/admin_toggle.ejs') %>




<!-- ====== ionicons ======= -->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>



</body>
</html>

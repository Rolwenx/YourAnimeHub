
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Manage Characters - YourAnimeHub</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link type="text/css" rel="stylesheet" href="/css/styleAdminDash.css">
  </head>
  <body>


<!-- =============== Navigation ================ -->
<div class="container_wb">
  <%- include('../partials_admin/admin_navigation.ejs') %>

  <!-- ========================= Main ==================== -->
  <div class="main_wb">
      <div class="topbar">
          <div class="toggle">
              <ion-icon name="menu-outline"></ion-icon>
          </div>

          <div class="search">
              <label>
                  <input type="text" placeholder="Search here">
                  <ion-icon name="search-outline"></ion-icon>
              </label>
          </div>

          <a href="/user" class="user">
            <img class="profile-picture" src="<%= user.ProfilePictureURL %>" alt="Profile Picture">
        </a>
      </div>

      

      <div class="add_edit_container">
        <h3 class="edit_btn">To Edit Character, click on its Name</h3>
    </div>

      <!-- ================ Anime Details List ================= -->
      <div class="details">
          <div class="recentAnime">
              <div class="cardHeader">
                  <h2>All Characters</h2>
              
              </div>
  
          
              <div class="animeCard">
                <% if (characterList && Array.isArray(characterList) && characterList.length > 0) { %>
                  <% characterList.forEach(character => { %>
                    <div class="card">
                      <div class="image-container">
                        <img src="<%= character.ImageURL %>" alt="<%= character.CharName %>">
                      </div>
                      <div class="title-container">
                        <a href="/admin/characters/edit/<%= character.CharacterID %>/<%= character.CharName %>">
                          <%= character.CharName %>
                        </a>
                        <a href="/admin/characters/delete/<%= character.CharacterID %>/<%= character.CharName %>" class="delete-btn">
                          <ion-icon name="close-outline"></ion-icon>
                        </a>
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <p>No characters available in the database.</p>
                <% } %>
              </div>
              
            
            
            
            <div class="load-more-container">
              <button id="load-more-button" class="load-more-button">Load More</button>
            </div>


          <div class="add_edit_container">
              <a href="/admin/characters/add" class="add_btn">Add Character</a>
          </div>

        </div>

  
      </div>
  </div>
</div>

<%- include('../partials_admin/admin_delete_popup.ejs') %>
<%- include('../partials_admin/load_more_cards.ejs') %>
<%- include('../partials_admin/admin_toggle.ejs') %>




<!-- ====== ionicons ======= -->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>



</body>
</html>
